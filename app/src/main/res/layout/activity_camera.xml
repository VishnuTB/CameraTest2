<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.camera.CameraActivity">

    <SurfaceView
        android:id="@+id/surfaceViewCamera"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewImageCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_stroke_thin"
        android:padding="10dp"
        android:text="@string/placeholder_image_count"
        android:textColor="@android:color/white" />

    <ToggleButton
        android:id="@+id/toggleCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textOff="OFF"
        android:textOn="ON" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageViewPreview"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp" />

</FrameLayout>